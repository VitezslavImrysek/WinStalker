<Window x:Class="WinStalker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinStalker"
        mc:Ignorable="d" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True"
        Background="Transparent"
        Title="MainWindow" Height="100" Width="200" Topmost="True">
    <Border Background="WhiteSmoke" BorderBrush="Gray" BorderThickness="1" CornerRadius="8">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Lorem ipsum" HorizontalAlignment="Center" />
            <Button Content="Click" Margin="4" />
            <TextBlock Margin="0,16,0,0" Text="Hold CTRL+Shift to pause stalking" HorizontalAlignment="Center" FontStyle="Italic" Foreground="Gray" />
        </StackPanel>
    </Border>
</Window>
